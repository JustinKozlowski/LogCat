{
  "manifest_version": 3,
  "name": "CatLog",
  "version": "1.0",
  "description": "A Chrome extension to parse Logs in K8s dashboard. It can be useful if DataDog is down/not helpful",
  "permissions": ["scripting", "activeTab"],
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "all_frames": true
    }
  ],
  "background": {
    "service_worker": "background.js"
  }
}
